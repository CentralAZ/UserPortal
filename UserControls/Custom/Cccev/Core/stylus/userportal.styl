mesa = #823b34
glendale = #447baf
gilbert = #bd8b20
queen-creek = #73517f

vendor(prop, args)
	-webkit-{prop} args
	 -khtml-{prop} args
	   -moz-{prop} args
	    -ms-{prop} args
	     -o-{prop} args
	        {prop} args

border-radius()
	vendor('border-radius', arguments)

box-shadow()
	vendor('box-shadow', arguments)

transition()
	vendor('transition', arguments)

transform()
	vendor('transform', arguments)

transform-origin()
	vendor('transform-origin', arguments)

user-select()
	vendor('user-select', arguments)

text-shadow()
	vendor('text-shadow', arguments)

#user-portal-container
	position relative
	//overflow hidden
	width 590px
	height auto
	label
		font-weight bold
		font-size 14px
	label.ui-button
		font-weight normal
	dt
		padding-bottom 5px
	dd
		padding-bottom 10px
		position relative
	legend
			font-size 18px
			padding 0px 0px 20px
			display block
	.ea-edit, .fm-edit, .ea-delete
		width 26px
		height 26px
		display block
		margin-top -5px
		opacity 0.5
		&:hover
			opacity 1
	.ui-icon
		display block
		height 16px
		width 16px
		overflow hidden
		text-indent -1000px
		line-height 0px
		margin 5px auto 0px
	#birthdate
		margin-right 5px
		display block
		float left
	.ui-datepicker-trigger
		margin-top -1px
		display block
		float left

	.user-details
		display block
		.heading
			float none
			clear both
			padding 20px 0px
			> h2, > a
				display inline
				margin-right 30px
		tr
			td
				padding 3px 5px
				vertical-align top
				&:first-child
					font-weight bold
					text-align right
					padding-right 10px
			.inactive, .unlisted
				font-size 12px
				opacity 0.5
			th
				border-bottom none
				text-align center
			.emails
				padding 0px
		.avatar, .details
			float left
		.avatar
			//margin-right 30px
			//overflow hidden
			> img
				width 128px
				height 128px
				border 5px solid #e8e8e8
				box-shadow(0px 0px 2px 0px rgba(50, 50, 50, .7))
			> p
				margin-bottom 10px
			.campus
				display block
				background url(../../../../../templates/cccev/007/images/campus_select.png) no-repeat top left
				height 24px
				width 85px
				line-height 20px
				padding-top 94px
				font-weight bold
				text-align center
				margin 0px auto
				cursor pointer
			.mesa
				background-position 0px -104px
				color mesa
			.gilbert
				background-position -175px -104px
				color gilbert
			.queen-creek
				background-position -350px -104px
				color queen-creek
			.glendale
				background-position -525px -104px
				color glendale
		.family
			clear both
			float none
			margin 10px 10px 10px 0px
			padding 10px 20px
			border 1px solid #dcdcdc
			border-radius(10px)
			box-shadow(inset 0px 0px 10px 0px #ddd)
			background #f1f1f1
		#email-addresses
			margin-top -2px
	.edit-details
		display block
		.ui-buttonset
			margin-top 30px
			.cancel
				margin-left 20px
		.phone-options
			position absolute
			top -5px
			left 190px
			margin 0px
		#campus-picker
			margin 0px
			padding
			li
				list-style-type none
				display block
				float left
				width auto
		.tool-tip
			display none
			background #f1f1f1
			border 1px solid #ccc
			border-top 1px solid #fff
			border-left 1px solid #fff
			box-shadow(0px 10px 50px 3px #333)
			border-radius 10px
			position absolute
			right -50px
			top -50px
			z-index 3
			padding 30px
			opacity 0.97
	.edit-family-member, .edit-email-address
		position absolute
		top 70px
		left 50%
		width 240px
		margin-left -200px
		background #f1f1f1
		border 1px solid #ccc
		border-top 1px solid #fff
		border-left 1px solid #fff
		box-shadow(0px 10px 50px 3px #333)
		border-radius 10px
		padding 30px
		z-index 3
		opacity 0.97
		.ea-cancel, .fm-cancel
			margin-left 20px

	.spinner
		background url(../images/circle-loader.gif) no-repeat center center
		border 1px solid #bbb
		box-shadow(0px 0px 5px 0px #787878)
		border-radius(5px)
		height 32px
		width 32px
		position absolute
		top 10px
		right 10px
	> .ui-state-error
		position absolute
		top 10px
		right 10px
		width 300px
		box-shadow 0px 0px 7px 0px #bbb
		.close
			position absolute
			top 10px
			right 15px
			text-decoration none
			font-weight bold
